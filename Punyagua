  </section>  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>  <script>AOS.init();</script>  <script>
    const text = "Seorang Barista yang terlatih dalam kesabaran, konsistensi dan cita rasa, kini menjelma menjadi Developer yang berfokus pada efisiensi, kreativitas dan teknologi.\n\nSaya aktif membangun sistem interaktif, serta gamemode & scripting GTA San Andreas Multiplayer (SA-MP).\n\nKeahlian bukan hanya apa yang kita tahu, tetapi bagaimana kita terus berkembang.";
    let idx = 0;
    function type() {
      if (idx < text.length) {
        document.querySelector('.typing-text').innerHTML += text.charAt(idx++);
        setTimeout(type, 20);
      }
    }
    window.addEventListener('load', type);
  </script></body>
